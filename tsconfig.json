{
  "compilerOptions": {
    "target": "ES6",                          
    "module": "ES6",           
    "strict": true,   
    "noImplicitAny": true,            
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                       
    "rootDir": "./src"                    
  },
  "include": ["src/**/*"],    
  "exclude": ["node_modules"]                 
}
